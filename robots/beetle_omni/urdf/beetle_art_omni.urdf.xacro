<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="beetle_link" >

  <xacro:macro name="beetle_center_link" params="child1 child2 child3 child4">
    ## dummy
    <link name="root"/>

    ## main body
    <link name="main_body">
      <inertial>
        <origin xyz="0.00000847 0.00023741 0.01491666" rpy="0 0 0"/>
        <mass value="2.27739"/>
        <inertia
            ixx="0.02747704" iyy="0.02676088" izz="0.04047304"
            ixy="-0.00000599" ixz="0.00009626" iyz="0.00006750"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://beetle_omni/urdf/mesh/main_body_beetle_omni_w_guard.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0.0385" rpy="0 0 0"/>
        <geometry>
          <box size="0.35 0.35 0.275"/>
        </geometry>
      </collision>
    </link>
    <joint name="root_joint" type="fixed">
      <parent link="root"/>
      <child link="main_body"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </joint>

    ## fc: flight controller. Note that "baselink" is assigned to "fc" in common.xacro by default
    <link name="fc">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.00001"/>
        <inertia
            ixx="0.000001" ixy="0.0" ixz="0.0"
            iyy="0.000001" iyz="0.0"
            izz="0.000001"/>
      </inertial>
    </link>
    <joint name="fc_joint" type="fixed">
      <child link="fc"/>
      <parent link="main_body"/>
      <origin rpy="0 0 0" xyz="-0.0175 -0.0015 0.06647"/>  # should be aligned with the position of IMU
    </joint>

    ## rotor arm macro
    <xacro:macro name="dummy_rotor_arm" params="id x y z yaw">
      ## link
      <link name="rotor_arm${id}">
        <inertial>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <mass value="0.0001"/>
          <inertia
              ixx="0.000001" ixy="0.0" ixz="0.0"
              iyy="0.0001" iyz="0.0"
              izz="0.0001"/>
        </inertial>
      </link>
      ## joint
      <joint name="base_arm_joint${id}" type="fixed">
        <parent link="main_body"/>
        <child link="rotor_arm${id}"/>
        <origin rpy="0 0 ${yaw}" xyz="${x} ${y} ${z}"/>
      </joint>
    </xacro:macro>

    ## dummy rotor arms
    <xacro:dummy_rotor_arm id = "${child1}" x = "0.17938" y="0.17938" z = "0.0171" yaw = "${pi*1.0/4.0}"/>
    <xacro:dummy_rotor_arm id = "${child2}" x = "-0.17938" y="0.17938" z = "0.0171" yaw = "${pi*3.0/4.0}"/>
    <xacro:dummy_rotor_arm id = "${child3}" x = "-0.17938" y="-0.17938" z = "0.0171" yaw = "${pi*5.0/4.0}"/>
    <xacro:dummy_rotor_arm id = "${child4}" x = "0.17938" y="-0.17938" z = "0.0171" yaw = "${-pi*1.0/4.0}"/>

    <xacro:friction self="main_body"/>
  </xacro:macro>

  <xacro:macro name="beetle_thrust_link" params="self rotor_direction">
    ## link
    #### rotor parent link (virtual) ####
    <link name="gimbal_link${self}">
      <inertial>
        <origin xyz="0.02085225 0.0 -0.01276312" rpy="0 0 0"/>
        <mass value="0.15944"/>
        <inertia
            ixx="0.00007281" iyy="0.00007289" izz="0.00007635"
            ixy="0.0" ixz="0.0" iyz="0.0"/>
      </inertial>
      <collision>
        <origin xyz="0.06 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.11 0.11 0.05"/>
        </geometry>
      </collision>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://beetle_omni/urdf/mesh/omni_rotor_module.dae"/>
        </geometry>
      </visual>
    </link>
    <xacro:damping_factor link="gimbal_link${self}"/>

    ## rotor parent link (virtual)
    <link name="rotor_parent${self}">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.00001"/>
        <inertia
            ixx="0.000001" ixy="0.0" ixz="0.0"
            iyy="0.000001" iyz="0.0"
            izz="0.000001"/>
      </inertial>
    </link>

    ## thrust link (virtual)
    <link name="thrust${self}">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.005"/>
        <inertia
            ixx="0.001" ixy="0.0" ixz="0.0"
            iyy="0.001" iyz="0.0"
            izz="0.001"/>
      </inertial>
    </link>
    <xacro:damping_factor link="thrust${self}"/>

    #### joints ####

    #### gimbal joints ####
    <joint name="gimbal${self}" type="revolute">
      <limit effort="6.6" lower="-3.926991" upper="3.926991" velocity="3.0"/>
      <parent link="rotor_arm${self}"/>
      <child link="gimbal_link${self}"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <axis xyz="1 0 0"/>
      <dynamics damping="0.8" friction="0.0"/>
    </joint>

    <transmission name="joint_tran${self}">3.141593
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="gimbal${self}">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="servo${self}">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
    #### rotor parent link joint (virtual) ####
    <joint name="rotor_parent_link_joint${self}" type="fixed">
      <parent link="gimbal_link${self}"/>
      <child link="rotor_parent${self}"/>
      <origin rpy="0 0 0" xyz="0.02185 0.0 0.0"/>
    </joint>

    #### rotor joint (virtual) ####
    <joint name="rotor${self}" type="continuous">
      <limit effort="100.0" lower="${min_force}" upper="${max_force}" velocity="0.5"/>
      <parent link="rotor_parent${self}"/>
      <child link="thrust${self}"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <axis xyz="0 0 ${rotor_direction}"/>
    </joint>

    <transmission name="rotor_tran${self}">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="rotor${self}">
        <hardwareInterface>RotorInterface</hardwareInterface>
      </joint>
      <actuator name="rotor_actuator${self}">
        <hardwareInterface>RotorInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
  </xacro:macro>

<!-- Define beetle -->
  <xacro:arg name="robot_name" default="beetle-art-omni" />

  <xacro:beetle_center_link child1="1" child2="2" child3="3" child4="4"/>
  <xacro:beetle_thrust_link self="1" rotor_direction="1"/>
  <xacro:beetle_thrust_link self="2" rotor_direction="-1"/>
  <xacro:beetle_thrust_link self="3" rotor_direction="1"/>
  <xacro:beetle_thrust_link self="4" rotor_direction="-1"/>

  <!-- ============ End‑Effector (EE) =============== -->

  <!-- Select EE type:  fork | ball | sensor_ball | brush -->
  <xacro:arg name="end_effector" default="fork"/>
  <xacro:property name="end_effector" value="$(arg end_effector)"/>

  <!-- Fixed the flange that all tools attach to -->
  <link name="ee_mount"/>
  <joint name="body_to_ee_mount" type="fixed">
    <parent link="main_body"/>
    <child link="ee_mount"/>
    <origin xyz="0 0 0.1725" rpy="0 0 0"/>
  </joint>

  <!-- Tool‑agnostic contact frame (pose set inside each branch) -->
  <link name="ee_contact"/>

  <!-- ############# Fork tool ############# -->
  <xacro:if value="${end_effector == 'fork'}">
    <!-- Tool geometry -->
    <link name="fork">
      <inertial>
        <origin xyz="0.00000000 0.06681059 -0.00005783" rpy="0 0 0"/>
        <mass value="0.140"/>
        <inertia
                ixx="0.00040632" iyy="0.00053824" izz="0.00040617"
                ixy="0.00000000" ixz="0.00000000" iyz="0.00000000"/>
      </inertial>
      <visual>
        <geometry>
          <mesh filename="package://beetle_omni/urdf/mesh/end_effector_fork.dae" scale="1 1 1"/>
        </geometry>
      </visual>
    </link>

    <!-- Mount fork to the flange -->
    <joint name="ee_mount_to_fork" type="fixed">
      <parent link="ee_mount"/>
      <child link="fork"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <!-- Contact point for the fork tips -->
    <joint name="fork_to_ee_contact" type="fixed">
      <parent link="fork"/>
      <child link="ee_contact"/>
      <origin xyz="0 0 0.104" rpy="0 0 0"/>
    </joint>
  </xacro:if>

  <!-- ############# Ball tool ############# -->
  <xacro:if value="${end_effector == 'ball'}">
    <link name="ball">
      <inertial>
        <origin xyz="0.00000000 0.08052689 0.00000000" rpy="0 0 0"/>
        <mass value="0.1030"/>
        <inertia
                ixx="0.00020646" iyy="0.00008167" izz="0.00020646"
                ixy="0.00000000" ixz="0.00000000" iyz="0.00000000"/>
      </inertial>
      <visual>
        <geometry>
          <mesh filename="package://beetle_omni/urdf/mesh/end_effector_ball.dae" scale="1 1 1"/>
        </geometry>
      </visual>
    </link>

    <joint name="ee_mount_to_ball" type="fixed">
      <parent link="ee_mount"/>
      <child link="ball"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <!-- Contact point at the ball’s center -->
    <joint name="ball_to_ee_contact" type="fixed">
      <parent link="ball"/>
      <child link="ee_contact"/>
      <origin xyz="0 0 0.11" rpy="0 0 0"/>
    </joint>
  </xacro:if>

  <!-- ############# Sensor‑ball tool ############# -->
  <xacro:if value="${end_effector == 'sensor_ball'}">

    <!-- Wrench sensor -->
    <link name="wrench_sensor">
      <inertial>
        <origin xyz="-0.00941317 0.00000000 -0.01652886" rpy="0 0 0"/>
        <mass value="0.285"/>
        <inertia
                ixx="0.00008773" iyy="0.00012377" izz="0.00016573"
                ixy="0.00000000" ixz="0.00000328" iyz="0.00000000"/>
      </inertial>
      <visual>
        <geometry>
          <mesh filename="package://beetle_omni/urdf/mesh/wrench_sensor_pfs055ya501u6.dae" scale="1 1 1"/>
        </geometry>
      </visual>
    </link>

    <joint name="ee_mount_to_sensor" type="fixed">
      <parent link="ee_mount"/>
      <child link="wrench_sensor"/>
      <origin xyz="0 0 0.031" rpy="0 0 0"/>
    </joint>

    <!-- Ball attached to the sensor -->
    <link name="ball">
      <!-- (same as plain ball) -->
      <inertial>
        <origin xyz="0.00000000 0.08052689 0.00000000" rpy="0 0 0"/>
        <mass value="0.1030"/>
        <inertia
                ixx="0.00020646" iyy="0.00008167" izz="0.00020646"
                ixy="0.00000000" ixz="0.00000000" iyz="0.00000000"/>
      </inertial>
      <visual>
        <geometry>
          <mesh filename="package://beetle_omni/urdf/mesh/end_effector_ball.dae" scale="1 1 1"/>
        </geometry>
      </visual>
    </link>

    <joint name="sensor_to_ball" type="fixed">
      <parent link="wrench_sensor"/>
      <child link="ball"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <!-- Contact point at ball tip -->
    <joint name="ball_to_ee_contact" type="fixed">
      <parent link="ball"/>
      <child link="ee_contact"/>
      <origin xyz="0 0 0.11" rpy="0 0 0"/>
    </joint>
  </xacro:if>

  <!-- ############# Brush tool ############# -->
  <xacro:if value="${end_effector == 'brush'}">
    <link name="brush">
      <inertial>
        <origin xyz="0.00000000 0.06565796 -0.00001172" rpy="0 0 0"/>
        <mass value="0.100"/>
        <inertia
                ixx="0.00019687" iyy="0.00013173" izz="0.00019689"
                ixy="0.00000000" ixz="0.00000000" iyz="0.00000000"/>
      </inertial>
      <visual>
        <geometry>
          <mesh filename="package://beetle_omni/urdf/mesh/end_effector_brush.dae" scale="1 1 1"/>
        </geometry>
      </visual>
    </link>

    <joint name="ee_mount_to_brush" type="fixed">
      <parent link="ee_mount"/>
      <child link="brush"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <!-- Contact frame at the bristle tip -->
    <joint name="brush_to_ee_contact" type="fixed">
      <parent link="brush"/>
      <child link="ee_contact"/>
      <origin xyz="0 0 0.144" rpy="0 0 0"/>
    </joint>
  </xacro:if>

</robot>
