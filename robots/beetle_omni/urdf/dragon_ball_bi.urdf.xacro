<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="dragon_ball_link" >
  <!-- general attribute -->
  <baselink name="fc" />
  <thrust_link name="thrust" />

  <m_f_rate value="-0.0112" /> <!-- drag torque rate -->
  <xacro:property name="max_force" value="15.0" /> <!-- [N] -->
  <xacro:property name="min_force" value="1.0" /> <!-- [N] -->

  <!-- friction -->
  <xacro:macro name="friction" params="self">
    <gazebo reference="link${self}">
      <mu1>0.1</mu1>
      <mu2>0.1</mu2>
    </gazebo>
  </xacro:macro>

  <xacro:macro name="damping_factor" params="link">
    <gazebo reference="${link}">
      <dampingFactor>0.00</dampingFactor>
    </gazebo>
  </xacro:macro>

  <!-- robot -->
  <xacro:macro name="dragon_ball_center_link" params="child1 child2">
    ## dummy
    <link name="root"/>

    ## main body
    <link name="main_body">
      <inertial>
        <origin xyz="-0.00057669 0.00011619 0.00444799" rpy="0 0 0"/>
        <mass value="1.1340"/>
        <inertia
            ixx="0.00358540" iyy="0.00354562" izz="0.00357607"
            ixy="-0.00000017" ixz="-0.00005461" iyz="0.00000844"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://beetle_omni/urdf/mesh/center_module_dragon_ball.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0.021" rpy="0 0 0"/>
        <geometry>
          <box size="0.15 0.15 0.160"/>
        </geometry>
      </collision>
    </link>
    <joint name="root_joint" type="fixed">
      <parent link="root"/>
      <child link="main_body"/>
      <origin rpy="0 0 0.78539816" xyz="0 0 0"/>
    </joint>

    <link name="fc">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.00001"/>
        <inertia
            ixx="0.000001" ixy="0.0" ixz="0.0"
            iyy="0.000001" iyz="0.0"
            izz="0.000001"/>
      </inertial>
    </link>
    <joint name="fc_joint" type="fixed">
      <child link="fc"/>
      <parent link="root"/>
      <origin rpy="0 0 0" xyz="-0.0175 -0.0015 0.075"/>  # should be aligned with the position of IMU
    </joint>

    ## rotor arm macro
    <xacro:macro name="dummy_rotor_arm" params="id x y z yaw">
      ## link
      <link name="rotor_arm${id}">
        <inertial>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <mass value="0.0001"/>
          <inertia
              ixx="0.000001" ixy="0.0" ixz="0.0"
              iyy="0.0001" iyz="0.0"
              izz="0.0001"/>
        </inertial>
      </link>
      ## joint
      <joint name="base_arm_joint${id}" type="fixed">
        <parent link="main_body"/>
        <child link="rotor_arm${id}"/>
        <origin rpy="0 0 ${yaw}" xyz="${x} ${y} ${z}"/>
      </joint>
    </xacro:macro>

    ## dummy rotor arms
    <xacro:dummy_rotor_arm id = "${child1}" x = "0.08231" y="0.08231" z = "0.0175" yaw = "${pi*1.0/4.0}"/>
    <xacro:dummy_rotor_arm id = "${child2}" x = "-0.08231" y="-0.08231" z = "0.0175" yaw = "${pi*5.0/4.0}"/>

    <xacro:friction self="main_body"/>
  </xacro:macro>

  <xacro:macro name="dragon_ball_thrust_link" params="self rotor_direction">
    ## link
    #### rotor parent link (virtual) ####
    <link name="gimbal_link${self}">
      <inertial>
        <origin xyz="0.01809124 0.0 -0.02799847" rpy="0 0 0"/>
        <mass value="0.065"/>
        <inertia
            ixx="0.00003763" iyy="0.00003471" izz="0.00005131"
            ixy="0.0" ixz="-0.00000255" iyz="0.0"/>
      </inertial>
      <collision>
        <origin xyz="0.06 0 -0.03" rpy="0 0 0"/>
        <geometry>
          <box size="0.08 0.13 0.043"/>
        </geometry>
      </collision>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://beetle_omni/urdf/mesh/omni_rotor_module_5inch.dae"/>
        </geometry>
      </visual>
    </link>
    <xacro:damping_factor link="gimbal_link${self}"/>

    ## rotor parent link (virtual)
    <link name="rotor_parent${self}">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.00001"/>
        <inertia
            ixx="0.000001" ixy="0.0" ixz="0.0"
            iyy="0.000001" iyz="0.0"
            izz="0.000001"/>
      </inertial>
    </link>

    ## thrust link (virtual)
    <link name="thrust${self}">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.005"/>
        <inertia
            ixx="0.001" ixy="0.0" ixz="0.0"
            iyy="0.001" iyz="0.0"
            izz="0.001"/>
      </inertial>
    </link>
    <xacro:damping_factor link="thrust${self}"/>

    #### joints ####

    #### gimbal joints ####
    <joint name="gimbal${self}" type="revolute">
      <limit effort="6.6" lower="-3.926991" upper="3.926991" velocity="3.0"/>
      <parent link="rotor_arm${self}"/>
      <child link="gimbal_link${self}"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <axis xyz="1 0 0"/>
      <dynamics damping="0.8" friction="0.0"/>
    </joint>

    <transmission name="joint_tran${self}">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="gimbal${self}">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="servo${self}">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
    #### rotor parent link joint (virtual) ####
    <joint name="rotor_parent_link_joint${self}" type="fixed">
      <parent link="gimbal_link${self}"/>
      <child link="rotor_parent${self}"/>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
    </joint>

    #### rotor joint (virtual) ####
    <joint name="rotor${self}" type="continuous">
      <limit effort="100.0" lower="${min_force}" upper="${max_force}" velocity="0.5"/>
      <parent link="rotor_parent${self}"/>
      <child link="thrust${self}"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <axis xyz="0 0 ${rotor_direction}"/>
    </joint>

    <transmission name="rotor_tran${self}">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="rotor${self}">
        <hardwareInterface>RotorInterface</hardwareInterface>
      </joint>
      <actuator name="rotor_actuator${self}">
        <hardwareInterface>RotorInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
  </xacro:macro>

<!-- Define dragon_ball -->
  <xacro:arg name="robot_name" default="dragon-ball" />
  <xacro:property name="robot_name" value="$(arg robot_name)"/>

  <xacro:dragon_ball_center_link child1="1" child2="2"/>
  <xacro:dragon_ball_thrust_link self="1" rotor_direction="1"/>
  <xacro:dragon_ball_thrust_link self="2" rotor_direction="-1"/>

  <!-- ============ End‑Effector (EE) =============== -->

  <!-- Select EE type: none -->
  <xacro:arg name="end_effector" default="none"/>
  <xacro:property name="end_effector" value="$(arg end_effector)"/>

  <xacro:if value="${end_effector != 'none'}">
    <xacro:error>Invalid end_effector type: ${end_effector}. Must be one of: fork, ball, sensor_ball, brush, osmo.</xacro:error>
  </xacro:if>

  <!-- Fixed the flange that all tools attach to -->
  <link name="ee_mount"/>
  <joint name="body_to_ee_mount" type="fixed">
    <parent link="main_body"/>
    <child link="ee_mount"/>
    <origin xyz="0 0 0.104" rpy="0 0 0"/>
  </joint>

  <!-- Tool‑agnostic contact frame (pose set inside each branch) -->
  <link name="ee_contact"/>

  <!-- +++++++++ EE bottom ++++++++++ -->
  <xacro:arg name="end_effector_bottom" default="brush_short"/>
  <xacro:property name="end_effector_bottom" value="$(arg end_effector_bottom)"/>

  <xacro:if value="${end_effector_bottom != 'none' and end_effector_bottom != 'brush_short'}">
    <xacro:error>Invalid end_effector_bottom type: ${end_effector_bottom}. Must be one of: fork, ball, sensor_ball, brush, brush_short, mouse, droplet_tail, none.</xacro:error>
  </xacro:if>

  <!-- Fixed the flange that all tools attach to -->
  <link name="ee_bottom_mount"/>
  <joint name="body_to_ee_bottom_mount" type="fixed">
    <parent link="main_body"/>
    <child link="ee_bottom_mount"/>
    <origin xyz="0 0 -0.062" rpy="0 3.1415926 0"/>
  </joint>

  <!-- Tool‑agnostic contact frame (pose set inside each branch) -->
  <link name="ee_bottom_contact"/>

  <!-- ############# None ############# -->
  <xacro:if value="${end_effector == 'none'}">
    <!-- attach ee_contact to ee_mount (top) -->
    <joint name="ee_mount_to_ee_contact" type="fixed">
      <parent link="ee_mount"/>
      <child link="ee_contact"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>
  </xacro:if>
  <xacro:if value="${end_effector_bottom == 'none'}">
    <!-- attach ee_bottom_contact to ee_bottom_mount -->
    <joint name="ee_bottom_mount_to_ee_bottom_contact" type="fixed">
      <parent link="ee_bottom_mount"/>
      <child link="ee_bottom_contact"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>
  </xacro:if>

  <!-- ############# Short Brush tool ############# -->
  <xacro:include filename="$(find beetle_omni)/urdf/effectors/brush_short_ee.xacro"/>

  <xacro:if value="${end_effector == 'brush_short'}">
    <xacro:brush_short_end_effector ee_mount_link="ee_mount" ee_contact_link="ee_contact" robot_ns="${robot_name}"/>
  </xacro:if>
  <xacro:if value="${end_effector_bottom == 'brush_short'}">
    <xacro:brush_short_end_effector ee_mount_link="ee_bottom_mount" ee_contact_link="ee_bottom_contact" robot_ns="${robot_name}"/>
  </xacro:if>

</robot>
